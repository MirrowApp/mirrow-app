---
import Mirrow from "./svgs/Mirrow.astro";
import Hashtag from "./svgs/Hashtag.astro";

const year = new Date().getFullYear();
---

<footer class="max-w-3xl w-full mx-auto my-12">
  <div
    class="border border-[#383838] bg-black rounded-3xl p-4 md:p-5 shadow-sm"
  >
    <div
      class="flex flex-col gap-4 md:flex-row md:items-center md:justify-between"
    >
      <div class="flex items-center gap-3">
        <span class="shrink-0"><Mirrow /></span>
        <span class="text-lg font-semibold flex"
          ><p class="my-auto">mirrow</p><svg
            viewBox="0 0 50 20"
            width="50"
            height="20"
            class="my-auto"
          >
            <text
              x="0"
              y="16"
              font-family="Inter"
              font-size="18"
              fill="none"
              stroke="white"
              stroke-width="1"
              paint-order="stroke fill">.app</text
            >
          </svg></span
        >
      </div>

      <nav
        class="flex items-center mx-auto sm:mx-0 gap-4 text-sm text-slate-400"
      >
        <a href="/privacy-terms" class="hover:text-white transition-colors"
          >Privacy</a
        >
        <span class="opacity-40">·</span>
        <a href="/privacy-terms" class="hover:text-white transition-colors"
          >Terms</a
        >
        <span class="opacity-40">·</span>
        <a
          href="https://github.com/MirrowApp"
          target="_blank"
          class="hover:text-white transition-colors flex items-center gap-1"
        >
          <span>GitHub</span>
        </a>
      </nav>
    </div>

    <div class="mt-3 mx-auto text-xs text-slate-500 text-center">
      © {year} Mirrow. All rights reserved.
    </div>
  </div>
</footer>
